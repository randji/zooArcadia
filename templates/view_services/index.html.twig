{% extends 'base.html.twig' %}

{% block title %}Hello ViewServicesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    
</style>

<div class="main-container">
    <div class="row row d-flex align-items-center justify-content-center" style="height: 80vh;">
        {% for service in services %}
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('img/' ~ service.img) }}" class="card-img-top" alt="image du service">
                    <div class="card-body">
                    <h5 class="card-title">{{ service.name }}</h5>
                    <p class="card-text">{{ service.descript }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
